
<div class="container">
  <h1>Articles</h1>

  <table>
    <thead>
      <tr>
        <th class="text-center">Title</th>
        <th class="text-center">Description</th>
        <th class="text-center" colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
      <tr>
        <td><strong><%= article.title %></strong></td>
        <td><%= article.description %></td>
        <td><%= link_to "Voir", article_path(article) %></td>
        <td><%= link_to "Editer", edit_article_path(article) %></td>
        <td><%= link_to "Supprimer", article_path(article), method: :delete, data: {confirm: "Etes vous certain de vouloir supprimer cet article?"} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <p class="mt-2">
    <%= link_to "Nouveau", new_article_path %>
  </p>
</div>

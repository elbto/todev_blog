<section class="container card p-4">
  <h1 class="card-title text-center border-bottom pb-4 mb-4">Nouvel Article</h1>

  <% if @article.errors.any? %>
    <h2>Les erreurs suivantes ont bloqu√©es l'enregistrement de votre article</h2>
    <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with scope: :article, url: articles_path, local: true do |f| %>
    <p>
      <%= f.label :title, "Titre", class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </p>
    <p>
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control" %>
    </p>
    <p>
      <%= f.submit "Soumettre", class: "btn btn-primary" %>
    </p>
  <% end %>
</section>
